<p id="notice"><%= notice %></p>

<h1>Listing Folders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Upload URLs</th>
      <th>Upload Receipts</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @folders.each do |folder| %>
      <tr>
        <td><%= link_to folder.name, folder_path(folder) %></td>
        <td>
          <% folder.upload_urls.each do |url| %>
            <%= link_to url.code, [folder, url], class: "btn btn-primary btn-sm" %>
          <% end %>
        </td>
        <td><%= link_to folder.upload_receipts.length, folder_upload_receipts_path(folder) %></td>
        <td>
          <%= link_to 'Show', folder %><br>
          <%= link_to 'Edit', edit_folder_path(folder) %><br>
          <%= link_to 'Destroy', folder, method: :delete, data: { confirm: 'Are you sure?' } %><br>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Folder', new_folder_path %>
