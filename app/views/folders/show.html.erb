<h1 class="page-header">
  <!-- Heading Text -->
  <%= @folder.name %>
  <!-- Actions Button -->
  <div class="btn-group pull-right">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
      <span class="glyphicon glyphicon-cog"></span> <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li role="presentation" class="dropdown-header">Folder</li>
      <li><%= link_to 'Edit Folder', edit_folder_path(@folder) %></li>
      <li><%= link_to 'Destroy Folder', @folder, method: :delete, data: { confirm: 'Are you sure?' } %></li>
      <li class="divider"></li>
      <li role="presentation" class="dropdown-header">Upload Code</li>
      <li><%= link_to 'Generate New Upload Code', folder_code_path(@folder), method: :post, data: { confirm: 'Are you sure you want to generate a new upload code for this folder?' } %></li>
      <li class="<% if !@folder.upload_code %> disabled <% end %>"><%= link_to 'Clear Upload Code', folder_code_path(@folder), method: :delete, data: { confirm: 'Are you sure you want to clear this folder\'s upload code?' }%></li>
      <li class="divider"></li>
      <li role="presentation" class="dropdown-header">Uploads</li>
      <li class="disabled"><a href="#">Clear List</a></li>
    </ul>
  </div>
</h1>
<p class="lead">
  <% if !@folder.upload_code %>
    This folder doesn't have an upload code.
  <% else %>
    This folder's upload code is <a href="/upload/<%= @folder.upload_code %>"><span class="label label-default"><%= @folder.upload_code %></span></a>
  <% end %>
</p>

<div class="row">
  <!-- Uploads Table -->
  <div class="col-sm-12">
    <h2>Uploads</h2>
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th width="50%">File Name</th>
          <th width="40%">Date</th>
        </tr>
      </thead>
      <tbody>
        <% @uploads.each do |upload| %>
        <tr>
          <td><%= upload.id %></td>
          <td><%= upload.image_file_name %></td>
          <td><%= upload.created_at %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>



