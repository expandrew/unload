<p id="notice"><%= notice %></p>

<h1>Listing Upload Receipts for <%= @folder.name %></h1>

<table>
  <thead>
    <tr>
      <th>File name</th>
      <th>Folder</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @upload_receipts.each do |upload_receipt| %>
      <tr>
        <td><%= upload_receipt.file_name %></td>
        <td><%= upload_receipt.folder %></td>
        <td>
          <%= link_to 'Show', folder_upload_receipt_path(@folder, upload_receipt) %><br>
          <%= link_to 'Edit', edit_folder_upload_receipt_path(@folder, upload_receipt) %><br>
          <%= link_to 'Destroy', [@folder, upload_receipt], method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Upload receipt', new_folder_upload_receipt_path(@folder) %><br>
<%= link_to "Back to #{@folder.name}", folder_path(@folder) %>
