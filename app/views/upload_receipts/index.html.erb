<p id="notice"><%= notice %></p>

<h1>Listing Upload Receipts</h1>

<table>
  <thead>
    <tr>
      <th>File name</th>
      <th>Folder</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upload_receipts.each do |upload_receipt| %>
      <tr>
        <td><%= upload_receipt.file_name %></td>
        <td><%= upload_receipt.folder %></td>
        <td><%= link_to 'Show', upload_receipt %></td>
        <td><%= link_to 'Edit', edit_upload_receipt_path(upload_receipt) %></td>
        <td><%= link_to 'Destroy', upload_receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Upload receipt', new_upload_receipt_path %>
